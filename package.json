{
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "pnpm run db:test:start && pnpm run test:raw && pnpm run db:test:stop",
    "test:raw": "vitest run",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "prepare": "husky",
    "db:create": "docker pull postgres && docker run --name servicestart-db -e POSTGRES_PASSWORD=root -e POSTGRES_USER=dev -d -p 5432:5432 postgres",
    "db:push": "drizzle-kit push && DB_URL=postgres://test:root@localhost:5433/postgres drizzle-kit push",
    "db:test:create": "docker pull postgres && docker run --name servicestart-test-db -e POSTGRES_PASSWORD=root -e POSTGRES_USER=test -d -p 5433:5432 postgres",
    "db:test:start": "docker container start servicestart-test-db",
    "db:test:stop": "docker container stop servicestart-test-db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "next": "latest",
    "pg": "^8.17.2",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "server-only": "^0.0.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/eslint-plugin": "^1.6.6",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "**/*": "pnpm run format"
  }
}
